# some ls aliases
alias ll='ls -al'
alias la='ls -A'
alias l='ls -A'
alias vimcache="cd ~/.vim/tmp; rm -rf *; cd -; cd ~/.vim/backup; rm -rf *; cd -"
alias st="svn st *"
alias updatedb="sudo /usr/libexec/locate.updatedb"
alias wget="curl -OL "
alias sc="screen -T xterm-256color -D -RR"
alias mxlookup="nslookup -type=mx "
alias textedit="open -a TextEdit "
alias open-gui="open -t "
alias npm-clean="rm package-lock.json; rm -rf node_modules/; npm install"
alias npm-rebuild="npm-clean; npm run build"
alias mongod="mongod --config ~/.mongorc"
alias uuid="uuidgen | tr 'A-Z' 'a-z'"
alias dock-ssh="docker exec -it neon_wordpress_1 bash"
alias fucking="sudo"
alias zsh-reload="source ~/.zshrc"
alias wp-build="cd ~/Development/fn/cms; docker build -t fncms ."
alias wp-rm="docker container rm fnwp -f"
alias wp-start="docker run --publish 80:80 --env-file ~/Development/wp/.env.lst --name fnwp fncms"
alias wp-ssh="docker exec -it fnwp /bin/bash"
alias wp-stop="docker container stop fnwp"
alias plugin-build="composer up && npm i && npm run build"
alias dev="cd ~/Development/wp/dj-wp-local-development"
alias np="dev; publications/dj-wp-newspress"
alias mu="np; cd wordpress/wp-content/mu-plugins; ls -al"
alias delit="cd ~/Development/wp/deloitte/"
alias np-start="dev; ./app start"
alias mgvault="vault login -method=okta -namespace=pubedit/devlzv username=gavin.corbett@dowjones.com;vault read -format=json -namespace=pubedit/intlzv secret/bgwp/mansionglobal/pipeline/refresh_token"
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"
alias dps="docker ps"
alias cs="composer phpcs"
alias lint="composer phpcbf"
alias git-move="git up; git co sprint/np/sprint-9; git branch sprint/np/sprint-php82; git co sprint/np/sprint-php82; git push"
alias git-restart="git push origin --delete sprint/np/sprint-php82; git co sprint/np/sprint-9; git up;"
alias php-compat="composer require --dev 'phpcompatibility/php-compatibility:dev-develop'"
alias php-compat-scan="./vendor/bin/phpcs -p --ignore='/vendor/*,/node_modules/*,/client/build/*' . --standard=PHPCompatibility --runtime-set testVersion 8.2"
alias php-stan="composer require --dev 'phpstan/phpstan-deprecation-rules:*' 'phpstan/extension-installer' 'szepeviktor/phpstan-wordpress'"
alias php-stan-scan='echo -e "parameters:\n\tlevel: 0\n\tphpVersion: 80208\n\tpaths:\n\t\t- /root/.config/composer/vendor/phpstan/phpstan\n\t\t- /root/.config/composer/vendor/phpstan/phpstan-deprecation-rules\n\texcludePaths: \n\t\t- ./vendor\n\t\t- ./node_modules" > php8.neon && ./vendor/bin/phpstan analyse *.php . --memory-limit 1G -c php8.neon; rm php8.neon'
alias php-scan="php-compat; php-stan; php-compat-scan; php-stan-scan"
